<UserControl x:Class="CryptoPro.WpfApp.MVVM.Views.UserControls.DetailedCoinDescriptionUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CryptoPro.WpfApp.MVVM.Views.UserControls"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:viewmodels="clr-namespace:CryptoPro.WpfApp.MVVM.ViewModels.UserControls"
             xmlns:conventers="clr-namespace:CryptoPro.WpfApp.Conventers"
             d:DataContext="{d:DesignInstance Type=viewmodels:DetailedCoinDescriptionViewModel}"
             mc:Ignorable="d"
             Background="#000000"
             Width="1500" Height="1400">
    <UserControl.Resources>
        <conventers:SelectedRangeToBackground x:Key="SelectedRangeToBackground" />
        <conventers:CurrencyToVisibility x:Key="CurrencyToVisibility" />
        <conventers:ToUpper x:Key="ToUpper" />
        <conventers:DecimalToVariableCurrency x:Key="DecimalToVariableCurrency" />
        <conventers:LongToZeroCurrency x:Key="LongToZeroCurrency" />
        <conventers:FloatToZeroCurrency x:Key="FloatToZeroCurrency" />
        <conventers:PercentageToText x:Key="PercentageToText" />
        <conventers:PercentageToBrush x:Key="PercentageToBrush" />
        <FontFamily x:Key="Comfortaa">pack://application:,,,/Fonts/#Comfortaa</FontFamily>
        <FontFamily x:Key="Inter">pack://application:,,,/Fonts/#Inter</FontFamily>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Margin="5 25 0 25"
                        HorizontalAlignment="Left">
                <Button Width="120"
                        Command="{Binding PreviousPageCommand}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            Cursor="Hand"
                                            CornerRadius="5"
                                            BorderThickness="0.75"
                                            BorderBrush="#00FFFFFF"
                                            Background="{TemplateBinding Background}"
                                            Padding="14 6 18 6">
                                            <ContentPresenter />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="#151515" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#151515" />
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Background" Value="#151515" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <WrapPanel VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock Text="←"
                                   Foreground="#ebe3d7"
                                   VerticalAlignment="Center" FontSize="16" />
                        <TextBlock Text="Go back"
                                   VerticalAlignment="Center"
                                   Foreground="#ebe3d7"
                                   FontWeight="Medium"
                                   FontSize="13"
                                   Margin="6 0 0 0" />
                    </WrapPanel>
                </Button>
            </StackPanel>

            <!-- Coin to currency description -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal">
                <Image Source="{Binding Coin.ImageUri}"
                       Height="35"
                       Width="35" />
                <TextBlock Text="{Binding Coin.FullName}"
                           VerticalAlignment="Center"
                           Foreground="#ebe3d7"
                           FontWeight="Medium"
                           FontSize="15"
                           Margin="6 0 0 0" />
                <Border CornerRadius="5"
                        Margin="5 0 0 0"
                        BorderThickness="0.75"
                        BorderBrush="#00FFFFFF"
                        Background="#161616"
                        Padding="10 6 14 6">
                    <TextBlock Text="{Binding Coin.ShortName, Converter={StaticResource ToUpper}}"
                               VerticalAlignment="Center"
                               Foreground="#ebe3d7"
                               FontWeight="Medium"
                               FontSize="14" />
                </Border>
                <TextBlock Text="to"
                           VerticalAlignment="Center"
                           Foreground="#ebe3d7"
                           FontWeight="Medium"
                           FontSize="15"
                           Margin="5 0 0 0" />
                <materialIcons:MaterialIcon Height="35"
                                            Width="35"
                                            Kind="{Binding CurrencyIcon}"
                                            Foreground="{Binding CurrencyIconColor}" />
                <TextBlock Text="{Binding Currency.Name}"
                           VerticalAlignment="Center"
                           Foreground="#ebe3d7"
                           FontWeight="Medium"
                           FontSize="15"
                           Margin="2 0 0 0" />
                <Border CornerRadius="5"
                        Margin="5 0 0 0"
                        BorderThickness="0.75"
                        BorderBrush="#00FFFFFF"
                        Background="#161616"
                        Padding="10 6 14 6">
                    <TextBlock Text="{Binding Currency.Id, Converter={StaticResource ToUpper}}"
                               VerticalAlignment="Center"
                               Foreground="#ebe3d7"
                               FontWeight="Medium"
                               FontSize="14" />
                </Border>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Row="2">
                <!-- Chart Types -->
                <Border CornerRadius="7"
                        Margin="0 0  30 0"
                        Background="#161616"
                        Padding="3"
                        HorizontalAlignment="Left"
                        BorderThickness="0.5">
                    <ItemsControl HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  ItemsSource="{Binding ChartTypes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Cursor="Hand"
                                        Command="{Binding ChangeTabCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding Path=.}">
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                Padding="8"
                                                                CornerRadius="8">
                                                            <ContentPresenter />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>

                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <MultiBinding
                                                        Converter="{StaticResource SelectedRangeToBackground}">
                                                        <Binding Path="." />
                                                        <Binding Path=" DataContext.SelectedChartType"
                                                                 RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=UserControl}" />
                                                    </MultiBinding>
                                                </Setter.Value>
                                            </Setter>

                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#2c2c2c" />
                                                </Trigger>
                                                <Trigger Property="IsFocused"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#2c2c2c" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <TextBlock FontWeight="SemiBold"
                                               Text="{Binding Path=Value}"
                                               Foreground="#ebe3d7" />
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- TimeRanges Types -->
                <Border CornerRadius="7"
                        Margin="0 0  100 0"
                        Background="#161616"
                        Padding="3"
                        HorizontalAlignment="Left"
                        BorderThickness="0.5">
                    <ItemsControl HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  ItemsSource="{Binding TimeRanges}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Cursor="Hand"
                                        Command="{Binding ChangeTabCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding Path=.}">
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                Padding="8"
                                                                CornerRadius="8">
                                                            <ContentPresenter />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>

                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <MultiBinding
                                                        Converter="{StaticResource SelectedRangeToBackground}">
                                                        <Binding Path="." />
                                                        <Binding Path=" DataContext.SelectedTimeRange"
                                                                 RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=UserControl}" />
                                                    </MultiBinding>
                                                </Setter.Value>
                                            </Setter>

                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#2c2c2c" />
                                                </Trigger>
                                                <Trigger Property="IsFocused"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#2c2c2c" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <TextBlock FontWeight="SemiBold"
                                               Text="{Binding Path=Name}"
                                               Foreground="#ebe3d7" />
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </StackPanel>

            <!-- Chart -->
            <StackPanel Grid.Row="3">
                <ContentControl Margin="-70 0 0 0"
                                Content="{Binding PlotControl, Mode=OneWay}"
                                VerticalContentAlignment="Top"
                                HorizontalContentAlignment="Center"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Height="480"
                                Width="900" />
                <ContentControl Margin="-35 -90 0 0"
                                Content="{Binding VolumePlotControl, Mode=OneWay}"
                                VerticalContentAlignment="Top"
                                HorizontalContentAlignment="Center"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Height="100"
                                Width="875" />
            </StackPanel>

            <!-- Description -->
            <StackPanel
                Grid.Row="4"
                Orientation="Vertical">
                <StackPanel
                    Orientation="Horizontal">
                    <TextBlock Text="{Binding Coin.FullName, StringFormat='What is {0}'}"
                               FontWeight="SemiBold"
                               FontSize="22"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left" />
                    <TextBlock Margin=" 2 0 0 0"
                               Text="{Binding Coin.ShortName, StringFormat='({0})?', Converter={StaticResource ToUpper}}"
                               FontWeight="SemiBold"
                               FontSize="22"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left" />
                </StackPanel>
                <TextBlock Text="{Binding CoinFullData.EnglishDescription}"
                           Margin="0 5  0 0"
                           TextWrapping="Wrap"
                           MaxWidth="900"
                           FontWeight="Medium"
                           FontSize="18"
                           Foreground="DarkGray"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left" />
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <Border CornerRadius="5"
                    VerticalAlignment="Top"
                    BorderThickness="0.75"
                    Margin="0 80 0 0"
                    Width="350"
                    BorderBrush="#00FFFFFF"
                    Background="#161616">
                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0"
                                MouseUp="FollowOnGithub"
                                Height="32"
                                HorizontalAlignment="Left"
                                Margin="25 25 0 0"
                                CornerRadius="7"
                                Padding="10 0" Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="#3861fb" />
                                    </Style.Setters>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2c4cc7" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="6 0 0 0"
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           Text="Github"
                                           FontSize="13" />
                                <materialIcons:MaterialIcon Height="30"
                                                            Margin="5 0 0 0 "
                                                            Foreground="White"
                                                            Width="30"
                                                            Kind="Github" />
                            </StackPanel>
                        </Border>
                        <materialIcons:MaterialIcon Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    Height="30"
                                                    Margin="0 25 0 0 "
                                                    Foreground="White"
                                                    Width="30"
                                                    Kind="SwapHorizontal" />
                        <Border Grid.Column="2"
                                MouseUp="FollowOnTelegram"
                                Height="32"
                                HorizontalAlignment="Right"
                                Margin="0 25 25 0"
                                CornerRadius="7"
                                Padding="10 0" Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Setters>
                                        <Setter Property="Background" Value="#16C784" />
                                    </Style.Setters>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#07ad6e" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="6 0 0 0"
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           Text="Telegram"
                                           FontSize="13" />
                                <materialIcons:MaterialIcon Height="30"
                                                            Margin="5 0 0 0 "
                                                            Foreground="White"
                                                            Width="30"
                                                            Kind="SendCircle" />
                            </StackPanel>
                        </Border>
                    </Grid>
                    <materialIcons:MaterialIcon Height="50"
                                                Width="50"
                                                VerticalAlignment="Center"
                                                Margin="0 10 0 0 "
                                                Foreground="White"
                                                Kind="InformationSlabCircleOutline" />
                    <TextBlock Foreground="#ebe3d7"
                               Text="{Binding Coin.ShortName, 
                               Converter={StaticResource ToUpper}, StringFormat=' {0} Statistic'}"
                               HorizontalAlignment="Center"
                               Margin="0 10 0 0"
                               FontWeight="Bold"
                               FontSize="24" />
                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="25 0 0 0"
                                   Text="Market Rank"
                                   Foreground="Gray"
                                   FontWeight="Bold"
                                   FontSize="14" />
                        <TextBlock Grid.Column="1"
                                   Margin="0 0 25 0"
                                   HorizontalAlignment="Right"
                                   Text="{Binding CoinFullData.MarketCapRank, StringFormat='# {0}'}"
                                   Foreground="#ebe3d7"
                                   FontWeight="Bold"
                                   FontSize="14" />
                    </Grid>
                    <Border Height="0.5"
                            Margin="0 10 0 0 "
                            Width="300"
                            Background="DarkGray" />

                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="25 0 0 0"
                                   Text="Last Price"
                                   Foreground="Gray"
                                   FontWeight="Bold"
                                   FontSize="14" />
                        <TextBlock Grid.Column="1"
                                   Margin="0 0 25 0"
                                   HorizontalAlignment="Right"
                                   Text="{Binding Coin.CurrentPrice, Converter={StaticResource DecimalToVariableCurrency}}"
                                   Foreground="#ebe3d7"
                                   FontWeight="Bold"
                                   FontSize="14" />
                    </Grid>
                    <Border Height="0.5"
                            Margin="0 10 0 0 "
                            Width="300"
                            Background="DarkGray" />

                    <!-- All-Time Low -->
                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <WrapPanel Grid.Column="0"
                                   Orientation="Horizontal">
                            <WrapPanel Orientation="Vertical">
                                <TextBlock Margin="25 0 0 0"
                                           VerticalAlignment="Center"
                                           Text="High"
                                           Foreground="Gray"
                                           FontWeight="Bold"
                                           FontSize="13" />
                                <TextBlock Margin="25 5 0 0"
                                           VerticalAlignment="Center"
                                           Text="Low"
                                           Foreground="Gray"
                                           FontWeight="Bold"
                                           FontSize="13" />
                            </WrapPanel>
                            <WrapPanel Orientation="Vertical"
                                       Margin="0  0 0 0">
                                <Border VerticalAlignment="Center"
                                        Margin="4 -2  0 0"
                                        Padding="3"
                                        CornerRadius="3"
                                        Background="#2f2f2f">
                                    <TextBlock Text="24h⏶"
                                               Foreground="#16c784"
                                               FontSize="11" FontWeight="Medium" />
                                </Border>
                                <Border VerticalAlignment="Center"
                                        Margin="4 3  0 0"
                                        Padding="3"
                                        CornerRadius="3"
                                        Background="#2f2f2f">
                                    <TextBlock Text="24h⏷"
                                               Foreground="#ea3943"
                                               FontSize="11" FontWeight="Medium" />
                                </Border>
                            </WrapPanel>
                        </WrapPanel>
                        <WrapPanel Grid.Column="1"
                                   Orientation="Vertical"
                                   HorizontalAlignment="Right"
                                   Margin="0 0 25 0">
                            <TextBlock HorizontalAlignment="Right"
                                       Text="{Binding CoinFullData.MarketData.CurrencyHigh24H, 
                                       Converter={StaticResource DecimalToVariableCurrency}}"
                                       Foreground="#ebe3d7"
                                       FontWeight="Bold"
                                       FontSize="13" />
                            <TextBlock HorizontalAlignment="Right"
                                       Margin="0  5 0 0"
                                       Text="{Binding CoinFullData.MarketData.CurrencyLow24H, 
                                       Converter={StaticResource DecimalToVariableCurrency}}"
                                       Foreground="#ebe3d7"
                                       FontWeight="Bold"
                                       FontSize="13" />
                        </WrapPanel>
                    </Grid>
                    <Border Height="0.5"
                            Margin="0 10 0 0 "
                            Width="300"
                            Background="DarkGray" />

                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="25 0 0 0"
                                   Text="Market Cap"
                                   Foreground="Gray"
                                   FontWeight="Bold"
                                   FontSize="14" />
                        <TextBlock Grid.Column="1"
                                   Margin="0 0 25 0"
                                   HorizontalAlignment="Right"
                                   Text="{Binding Coin.MarketCap, Converter={StaticResource LongToZeroCurrency}}"
                                   Foreground="#ebe3d7"
                                   FontWeight="Bold"
                                   FontSize="14" />
                    </Grid>
                    <Border Height="0.5"
                            Margin="0 10 0 0 "
                            Width="300"
                            Background="DarkGray" />

                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="25 0 0 0"
                                   Text="Total Volume"
                                   Foreground="Gray"
                                   FontWeight="Bold"
                                   FontSize="14" />
                        <TextBlock Grid.Column="1"
                                   Margin="0 0 25 0"
                                   HorizontalAlignment="Right"
                                   Text="{Binding Coin.TotalVolume, Converter={StaticResource FloatToZeroCurrency}}"
                                   Foreground="#ebe3d7"
                                   FontWeight="Bold"
                                   FontSize="14" />
                    </Grid>
                    <Border Height="0.5"
                            Margin="0 10 0 0 "
                            Width="300"
                            Background="DarkGray" />

                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="25 0 0 0"
                                   Text="Circulating Supply"
                                   Foreground="Gray"
                                   FontWeight="Bold"
                                   FontSize="14" />
                        <WrapPanel Grid.Column="1"
                                   HorizontalAlignment="Right"
                                   Margin="0 0 25 0">
                            <TextBlock HorizontalAlignment="Right"
                                       Text="{Binding Coin.CirculatingSupply, StringFormat=' {0:N0}'}"
                                       Foreground="#ebe3d7"
                                       FontWeight="Bold"
                                       FontSize="14" />
                            <TextBlock HorizontalAlignment="Right"
                                       Margin="2 0 0 0"
                                       Text="{Binding Coin.ShortName, Converter={StaticResource ToUpper}}"
                                       Foreground="#ebe3d7"
                                       FontWeight="Bold"
                                       FontSize="14" />
                        </WrapPanel>
                    </Grid>
                    <Border Height="0.5"
                            Margin="0 10 0 0 "
                            Width="300"
                            Background="DarkGray" />

                    <!-- All-Time Low -->
                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <WrapPanel Grid.Column="0"
                                   Orientation="Horizontal">
                            <TextBlock Margin="25 0 0 0"
                                       VerticalAlignment="Center"
                                       Text="Market Cap"
                                       Foreground="Gray"
                                       FontWeight="Bold"
                                       FontSize="13" />
                            <Border VerticalAlignment="Center"
                                    Margin="4 0"
                                    Padding="4"
                                    CornerRadius="3"
                                    Background="#2f2f2f">
                                <TextBlock Text="24h"
                                           Foreground="#b3b9c5"
                                           FontSize="11" FontWeight="Medium" />
                            </Border>
                        </WrapPanel>
                        <WrapPanel Grid.Column="1"
                                   Orientation="Vertical"
                                   HorizontalAlignment="Right"
                                   Margin="0 0 25 0">
                            <TextBlock HorizontalAlignment="Right"
                                       Text="{Binding CoinFullData.MarketData.CurrencyMarketCapChange24HInCurrency, 
                                       Converter={StaticResource DecimalToVariableCurrency}}"
                                       Foreground="#ebe3d7"
                                       FontWeight="Bold"
                                       FontSize="13" />
                            <TextBlock HorizontalAlignment="Right"
                                       Margin="0 5 0 0"
                                       Text="{Binding CoinFullData.MarketData.CurrencyMarketCapChangePercentage24HInCurrency, 
                                       Converter={StaticResource PercentageToText}}"
                                       Foreground="{Binding CoinFullData.MarketData.CurrencyMarketCapChangePercentage24HInCurrency, 
                                       Converter={StaticResource PercentageToBrush}}"
                                       FontWeight="Bold"
                                       FontSize="13" />
                        </WrapPanel>
                    </Grid>
                    <Border Height="0.5"
                            Margin="0 10 0 0 "
                            Width="300"
                            Background="DarkGray" />

                    <!-- 24h percentage -->
                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal">
                            <TextBlock Margin="25 0 4 0"
                                       VerticalAlignment="Center"
                                       Text="Price Change"
                                       Foreground="Gray"
                                       FontWeight="Bold"
                                       FontSize="13" />
                            <Button VerticalAlignment="Center"
                                    Command="{Binding SwapToNextPriceChangeCommand}"
                                    HorizontalAlignment="Right">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Cursor="Hand"
                                                            CornerRadius="5"
                                                            BorderThickness="0.75"
                                                            BorderBrush="#00FFFFFF"
                                                            Background="{TemplateBinding Background}"
                                                            Padding="6 6 4 6">
                                                        <ContentPresenter />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Background" Value="#2f2f2f" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#151515" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="{Binding PriceChangeType}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Foreground="#b3b9c5"
                                           FontSize="11"
                                           FontWeight="Medium" />
                            </Button>

                        </StackPanel>
                        <WrapPanel Grid.Column="1"
                                   Orientation="Vertical"
                                   HorizontalAlignment="Right"
                                   Margin="0 0 25 0">
                            <TextBlock HorizontalAlignment="Right"
                                       Text="{Binding CurrencyPriceChange, 
                                       Converter={StaticResource DecimalToVariableCurrency}}"
                                       Foreground="#ebe3d7"
                                       FontWeight="Bold"
                                       FontSize="13" />
                            <TextBlock HorizontalAlignment="Right"
                                       Margin="0 5 0 0"
                                       Text="{Binding CurrencyPriceChangePercentage, 
                                       Converter={StaticResource PercentageToText}}"
                                       Foreground="{Binding CurrencyPriceChangePercentage, 
                                       Converter={StaticResource PercentageToBrush}}"
                                       FontWeight="Bold"
                                       FontSize="13" />
                        </WrapPanel>
                    </Grid>
                    <Border Height="0.5"
                            Margin="0 10 0 0 "
                            Width="300"
                            Background="DarkGray" />

                    <!-- All-Time High -->
                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <WrapPanel Grid.Column="0"
                                   Orientation="Vertical">
                            <TextBlock Margin="25 0 0 0"
                                       Text="All-Time High"
                                       Foreground="Gray"
                                       FontWeight="Bold"
                                       FontSize="13" />
                            <TextBlock Margin="25 5 0 0"
                                       Text="{Binding CoinFullData.MarketData.AthDateCurrency, 
                                       StringFormat='MMM dd yyyy'}"
                                       Foreground="Gray"
                                       FontWeight="Bold"
                                       FontSize="13" />
                        </WrapPanel>
                        <WrapPanel Grid.Column="1"
                                   Orientation="Vertical"
                                   HorizontalAlignment="Right"
                                   Margin="0 0 25 0">
                            <TextBlock HorizontalAlignment="Right"
                                       Text="{Binding CoinFullData.MarketData.AthCurrency, 
                                       Converter={StaticResource DecimalToVariableCurrency}}"
                                       Foreground="#ebe3d7"
                                       FontWeight="Bold"
                                       FontSize="13" />
                            <TextBlock HorizontalAlignment="Right"
                                       Margin="0 5 0 0"
                                       Text="{Binding CoinFullData.MarketData.AthChangePercentageCurrency, 
                                       Converter={StaticResource PercentageToText}}"
                                       Foreground="{Binding CoinFullData.MarketData.AthChangePercentageCurrency, 
                                       Converter={StaticResource PercentageToBrush}}"
                                       FontWeight="Bold"
                                       FontSize="13" />
                        </WrapPanel>
                    </Grid>
                    <Border Height="0.5"
                            Margin="0 10 0 0 "
                            Width="300"
                            Background="DarkGray" />

                    <!-- All-Time Low -->
                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <WrapPanel Grid.Column="0"
                                   Orientation="Vertical">
                            <TextBlock Margin="25 0 0 0"
                                       Text="All-Time Low"
                                       Foreground="Gray"
                                       FontWeight="Bold"
                                       FontSize="13" />
                            <TextBlock Margin="25 5 0 0"
                                       Text="{Binding CoinFullData.MarketData.AtlDateCurrency, 
                                       StringFormat='MMM dd yyyy'}"
                                       Foreground="Gray"
                                       FontWeight="Bold"
                                       FontSize="13" />
                        </WrapPanel>
                        <WrapPanel Grid.Column="1"
                                   Orientation="Vertical"
                                   HorizontalAlignment="Right"
                                   Margin="0 0 25 0">
                            <TextBlock HorizontalAlignment="Right"
                                       Text="{Binding CoinFullData.MarketData.AtlCurrency, 
                                       Converter={StaticResource DecimalToVariableCurrency}}"
                                       Foreground="#ebe3d7"
                                       FontWeight="Bold"
                                       FontSize="13" />
                            <TextBlock HorizontalAlignment="Right"
                                       Margin="0 5 0 0"
                                       Text="{Binding CoinFullData.MarketData.AtlChangePercentageCurrency, 
                                       Converter={StaticResource PercentageToText}}"
                                       Foreground="{Binding CoinFullData.MarketData.AtlChangePercentageCurrency, 
                                       Converter={StaticResource PercentageToBrush}}"
                                       FontWeight="Bold"
                                       FontSize="13" />
                        </WrapPanel>
                    </Grid>
                    <Border Height="0.5"
                            Margin="0 10 0 0 "
                            Width="300"
                            Background="DarkGray" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>